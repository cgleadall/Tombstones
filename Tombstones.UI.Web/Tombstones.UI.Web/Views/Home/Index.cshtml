@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>

            <span class="button blue"><a href="@Tombstones.UI.Web.Areas.Tombstones.Controllers.HomeController.IndexLinkPath">Tombstones</a></span>
            <span class="button orange"><a href="/">Burials</a></span>
        </div>
    </section>

}

